    -fx-border-color: #1A2B3C;
    -fx-border-width: 1;
    -fx-background-radius: 5 5 0 0;
    -fx-border-radius: 5 5 0 0;
    -fx-font-weight: bold;
}

/* Common style for all TitledPane content areas */
.titled-pane .content {
