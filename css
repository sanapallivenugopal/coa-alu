}

/* --- Give each section a unique background --- */
#inputsPane .content {
    -fx-background-color: #FFFFFF; /* Plain white */
}
#arithmeticPane .content {
    -fx-background-color: #E8F5E9; /* Light green */
}
#logicalPane .content {
    -fx-background-color: #E3F2FD; /* Light blue */
}
#resultsPane .content {
    -fx-background-color: #F3E5F5; /* Light purple */
}


/* Style for labels inside the panes */
.label {
    -fx-font-size: 14px;
    -fx-font-weight: bold;
    -fx-text-fill: #333;
}

/* --- Button Colors --- */

/* Base button style */
.button {
