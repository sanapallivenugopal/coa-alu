/* Main window styling */
.root {
    -fx-background-color: linear-gradient(to bottom right, #6EC5F7, #F3A6FF);
    -fx-font-family: 'Arial';
}

/* Styling for all TitledPane headers (the titles) */
.titled-pane > .title {
    -fx-background-color: #2A3F54; /* Dark blue/grey */
